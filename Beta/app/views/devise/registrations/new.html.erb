<div class="home">
  <div class="sign-in">
    <p class="devise-title">新規登録</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :username, "ご自身のユーザー名", class: "colibri-form-label" %><span class="required-true">*</span>
        <%= f.text_field :username, autofocus: true, required: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :company, "ご自身の事業所名", class: "colibri-form-label" %><span class="required-true">*</span>
        <%= f.text_field :company, required: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "ご自身のメールアドレス", class: "colibri-form-label" %><span class="required-true">*</span>
        <%= f.email_field :email, required: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード(6桁以上)", class: "colibri-form-label" %><span class="required-true">*</span>
        <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワードの確認", class: "colibri-form-label" %><span class="required-true">*</span>
        <%= f.password_field :password_confirmation, required: true, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="action">
        <%= f.submit "登録する", class: 'btn btn-info btn-block form-control' %>
      </div>
    <% end %>

    <div id="devise-links">
      <%= render "devise/shared/links" %>
      
    </div>

  </div>

</div>



