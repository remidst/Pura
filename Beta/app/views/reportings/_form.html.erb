<%= form_for([@contact, @reporting], html: {multipart: true}) do |f| %>
	
	<div class="form-group">
		<%= f.label :title, '書類内容' %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :message, 'メッセージ' %>
		<%= f.text_area :message, class: 'form-control' %>
	</div>

	<%= f.fields_for :reporting_attachments do |a| %>
		<div class="form-group">
			<%= a.label :attachment, '添付ファイル' %>
			<%= a.file_field :attachment, multiple: true, name: "reporting_attachments[attachment][]", class: 'form-control' %>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.submit '送信する', class: "btn btn-info" %>
	</div>
<% end %>