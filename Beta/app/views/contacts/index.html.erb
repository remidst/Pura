<div class="container-fluid">

	<%= render 'layouts/contacts_app_navigation' %>

	<div class="timeline-container">
		<%= link_to '+事業所を招待する', new_contact_path, class: "btn btn-info" %>


		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>事業所名</th>
					<th>責任者名</th>
				</tr>
			</thead>
			<tbody id="contact-index-table">
				<% @contacts_care_manager.each do |contact| %>
					<tr class="clickable-row" data-link="<%= contact_path(contact) %>">
						<td><%= contact.care_manager.company.present? ? contact.care_manager.company : "(未登録)" %></td>
						<td><%= contact.care_manager.username.present? ? contact.care_manager.username : contact.care_manager.email %></td>
					</tr>
				<% end %>
				<% @contacts_service_provider.each do |contact| %>
					<tr class="clickable-row" data-link="<%= contact_path(contact) %>">
						<td><%= contact.service_provider.company.present? ? contact.service_provider.company : "(未登録)" %></td>
						<td><%= contact.service_provider.username.present? ? contact.service_provider.username : contact.service_provider.email %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

</div>