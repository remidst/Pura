<div class="container-fluid">
	<div id="tab-panel">
	  <ul class="nav nav-tabs">
	    <li class="nav-show" id="nav-msg"><%= link_to '利用者一覧', root_path %></li>
	    <li class="nav-show  nav-selected" id="nav-file"><%= link_to '責任者.事業所', contacts_path %></li>
	  </ul>
	</div>

	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>事業所名</th>
				<th>責任者名</th>
			</tr>
		</thead>
		<tbody id="contact-index-table">
			<% @contacts_care_manager.each do |contact| %>
				<tr class="clickable-row" data-link="<%= contact_path(contact) %>">
					<td><%= contact.care_manager.company %></td>
					<td><%= contact.care_manager.username %></td>
				</tr>
			<% end %>
			<% @contacts_service_provider.each do |contact| %>
				<tr class="clickable-row" data-link="<%= contact_path(contact) %>">
					<td><%= contact.service_provider.company %></td>
					<td><%= contact.service_provider.username %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>