<div class="container-fluid">

	<%= render 'layouts/contacts_app_navigation' %>


	<div id="contact-show-block">
		<div id="contact-information-container">
			<h1><%= contact_company(@contact) %></h1>
			<%= contact_role(@contact) %><%= contact_name(@contact) %>
		</div>


		<div id="contact-reporting-container">
		<%= link_to "書類をまとめて送信", new_contact_reporting_path(@contact), class: "btn btn-info btn-reporting" %><br/>

		</div>
	</div>

	<div class="timeline-container">
		<div id="contact-reporting-list">
			<% @unshared.each do |reporting| %>
				<% if current_user == reporting.publisher %>
					<%= render partial: 'reportings/reporting', locals: {reporting: reporting, contact: @contact} %>
					<%= render partial: 'reportings/confirm_button', locals: {reporting: reporting, contact: @contact} %>
				<% end %>
			<% end %>

			<% @reportings.each do |reporting| %>
				<%= render partial: 'reportings/reporting', locals: {reporting: reporting, contact: @contact} %>
			<% end %>
		</div>
	</div>

</div>