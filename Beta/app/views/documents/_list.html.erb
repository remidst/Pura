<table class="table table-striped">
  <thead>
  	<tr>
  		<th>ファイル名</th>
      <th>ユーザー</th>
      <th>日付</th>
  		<th>ダウンロード</th>
  		<th>消す</th>
  	</tr>
  </thead>
  <tbody>
  	<% if @documents.each do |document| %>
		<tr>
			<td><%= document.attachment.file.filename %></td>
      <td><%= document.user.try(:username) %></td>
      <td><%= document.created_at.try(:strftime, '%Y-%m-%d') %></td>
			<td><%= link_to "ダウンロード", document.attachment_url %></td>
			<td><% if policy(document).edit? %><%= link_to "消す",  [document.project, document], method: :delete, confirm: "このファイルは削除されます" %><% end %></td>
		</tr> 
	<% end.empty? %>
  <% end %>
  </tbody>
</table>
   
