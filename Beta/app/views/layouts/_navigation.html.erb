<nav class="navbar navbar-custom">
  <div class="container">
    <div class="navbar-header">
      <%= link_to image_tag('logo_jpeg_test.jpeg', size: "40x40"), root_path, id: 'brand' %>
      <span id="span-brand">Colibri</span> 
    </div>

    <div id="navbar">
    <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
        <li id="profile-avatar-li">
          <% if current_user.avatar.url.present? %>
            <%= image_tag(current_user.avatar.url(:thumb), class: "img-circle img-circle-cell") %>
          <% else %>
            <div class="color-avatar avatar-thumb" style="background-color: <%= current_user.avatar_color if current_user.avatar_color %>">
              <%= current_user.username.chars.first %>
            </div>
          <% end %>
        </li>
        <li>
          <%= link_to 'アカウント', edit_user_registration_path(current_user), class: 'nav-item nav-item-cell' %>  
        </li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete,  class: 'nav-item' %></li>
        <div id="current-user"></div>
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: 'nav-item' %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: 'nav-item' %></li>
        <% end %>
    </ul>
  </div>
</nav>